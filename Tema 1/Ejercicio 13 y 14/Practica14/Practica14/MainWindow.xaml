<Window x:Class="Practica14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica14"
        mc:Ignorable="d"
        Title="Práctica 14 - Leo Rios -2º DAM" Height="400" Width="400">
    <Grid  Background="Gray">
        <StackPanel VerticalAlignment="Center" >
            <Slider Width="250" Height="60" Background="Gray"  Padding="20"/>

            <Slider Width="250" Height="60" Background="Gray" Maximum="10" TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>

            <Slider Width="250" Height="60" Background="Gray" Maximum="20" TickPlacement="TopLeft" TickFrequency="5" IsSnapToTickEnabled="True"/>

            <Slider Width="250" Height="60" Background="Gray" Minimum="0" Maximum="20" 
                    TickPlacement="Both" IsSnapToTickEnabled="True" IsSelectionRangeEnabled="True" SelectionStart="3" SelectionEnd="13"></Slider>
        </StackPanel>
    </Grid>
</Window>
