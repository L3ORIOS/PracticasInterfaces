<Window x:Class="Practica6.GroupBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica6"
        mc:Ignorable="d"
        Title="GroupBox" Height="200" Width="200">
    <Grid>
        <GroupBox Margin="10" Padding="10">
            <GroupBox.Header>
                <StackPanel >

                    <TextBlock FontWeight="Bold">GroupBox Sample</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel>
                <TextBlock>First name:</TextBlock>
                <TextBox />
                <TextBlock>Last name:</TextBlock>
                <TextBox />
                <Button Margin="0,20">Add User</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
